<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.erpdevelopment.alpha.fragment.AnswersFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include layout="@layout/layout_search_listview" android:id="@+id/et_search_answers"/>

        <LinearLayout
            android:id="@+id/ll_topic_filter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_below="@id/et_search_answers"/>

        <ListView
            android:id="@+id/lvAnswers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_topic_filter2"/>

    </RelativeLayout>

</FrameLayout>
