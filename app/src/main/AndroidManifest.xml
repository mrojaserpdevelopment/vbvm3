<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.erpdevelopment.vbvm"
          android:versionCode="13"
          android:versionName="2.1">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="24"
        tools:overrideLibrary="com.cardinalsolutions.progressindicator"/>
    m
    <supports-screens
        android:largeScreens="false"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="false"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo_scaled"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">

        <!-- android:theme="@style/AppBaseTheme"> -->

        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.BibleStudyLessonsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.AudioControllerActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">

            <!-- <meta-data -->
            <!-- android:name="android.support.UI_OPTIONS" android:value="splitActionBarWhenNarrow"/> -->
        </activity>
        <activity
            android:name=".activity.EventDetailsActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_event_details"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.ArticleDetailsActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_article_details"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.VideosVbvmActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_video"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.VideoVbvmDetailsActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_qand_aposts"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.QAndAPostDetailsActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_qand_apost_details"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.erpdevelopment.vbvm.MainActivity"/>
        </activity>
        <activity
            android:name=".activity.AboutActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_vbvm"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.AboutDetailsActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_vbvm_details"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.DonateActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_vbvm_donate"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.StaffBoardActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_staff_vbvm"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.StaffBoardDetailsActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_vbvm_staff_details"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.FindByTopicActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_find_by_topic"
            android:screenOrientation="portrait">
        </activity>

        <service android:name=".activity.AudioPlayerService">
        </service>
        <service android:name=".service.DownloadServiceTest">
        </service>

        <!-- <receiver android:name=".ShutdownReceiver"> -->
        <!-- <intent-filter> -->
        <!-- <action android:name="android.intent.action.ACTION_SHUTDOWN"/> -->
        <!-- </intent-filter> -->
        <!-- </receiver> -->


        <!-- <activity -->
        <!-- android:name=".MailSenderActivity" -->
        <!-- android:label="@string/title_activity_mail_sender"> -->
        <!-- </activity> -->
        <service
            android:name=".service.downloader.DownloadService"
            android:enabled="true"
            android:exported="true">
        </service>
    </application>

</manifest>