<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:background="#FFFFFF">

    <include layout="@layout/top_menu_bar"/>
    
<!--     <include layout="@layout/bottom_menu_bar"/> -->
    
	<!-- Top Menu Bar -->
    
    <RelativeLayout 
		android:id="@+id/top_control_bar"
	    android:layout_width="fill_parent"
		android:layout_height="40dp" 
		android:background="@drawable/top_title_bar"
		android:layout_alignParentTop="true">
		
<!--        	<Button  -->
<!-- 	        android:id="@+id/btn_back_articles" -->
<!-- 	        android:layout_width="wrap_content" -->
<!-- 	        android:layout_height="30dp" -->
<!-- 	        android:background="@drawable/button" -->
<!-- 	        android:text="Clear" -->
<!-- 	        android:textSize="16sp" -->
<!-- 	        android:textColor="@color/white" -->
<!-- 	        android:textStyle="bold" -->
<!-- 	        android:layout_alignParentLeft="true" -->
<!-- 	        android:layout_centerVertical="true" -->
<!-- 	        android:layout_marginLeft="10dp" -->
<!-- 	        android:paddingLeft="10dp" -->
<!-- 	        android:paddingRight="10dp"/> -->
        
        <ImageView
	        android:id="@+id/btn_go_back_articles" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/back_button_64"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"
	        android:visibility="gone"/>
        
         <TextView
           	android:id="@+id/tv_title_articles"
		    android:layout_width="wrap_content"
		    android:layout_height="30dp"
		    android:gravity="center_vertical"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:textColor="@android:color/white"
		    android:textStyle="bold"
		    android:text=""		    
		    android:textSize="20sp" 
		    android:layout_marginLeft="20dp"/>
         		
	</RelativeLayout>
	
    
	<!--     Bottom Menu Bar -->
    
	<LinearLayout 
	    android:id="@+id/bottom_control_bar"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@drawable/bottom_menu_bar"
		android:orientation="horizontal"
		android:gravity="center_vertical|center_horizontal">
		
        
        <LinearLayout 
        	android:id="@+id/ll_button_home"
	        android:background="@color/black_opaque"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center_vertical|center_horizontal">
            
			<ImageView
		        android:id="@+id/button_home"
		        android:layout_width="32dp"
		        android:layout_height="32dp"
		        android:src="@drawable/bottom_bar_icon_home"
		        android:clickable="true"		        
		        android:layout_marginLeft="0dp"
		        android:onClick="onClickControlBar"
		         />	
		    <TextView 
		        android:id="@+id/title_button_home"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:textSize="10sp"
		        android:text="My Studies"
		        android:textColor="#DDDDDD"
		        android:gravity="center_vertical|center_horizontal" />
	    </LinearLayout> 
	    
	    <LinearLayout 
        	android:id="@+id/ll_button_library"
	        android:background="@color/black_opaque"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center_vertical|center_horizontal">				
	        <ImageView  android:id="@+id/button_library"
		        android:layout_width="32dp"
		        android:layout_height="32dp"
		        android:src="@drawable/bottom_bar_icon_library"	        
		        android:clickable="true"
		        android:layout_marginLeft="0dp"
		        android:onClick="onClickControlBar"
		        />
		    <TextView 
		        android:id="@+id/title_button_library"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:textSize="10sp"
		        android:text="Bible Studies"
		        android:textColor="#DDDDDD"
		        android:gravity="center_vertical|center_horizontal" />
  	    </LinearLayout>
	    
	    <LinearLayout 
        	android:id="@+id/ll_button_calendar"
	        android:background="@color/black_opaque"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center_vertical|center_horizontal">
	        <ImageView  android:id="@+id/button_calendar"
		        android:layout_width="32dp"
		        android:layout_height="32dp"
		        android:src="@drawable/bottom_bar_icon_calendar"	        
		        android:clickable="true"
		        android:layout_marginLeft="0dp"
		        android:onClick="onClickControlBar"
		        />
   		    <TextView 
		        android:id="@+id/title_button_calendar"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:textSize="10sp"
		        android:text="Events"
		        android:textColor="#DDDDDD"
		        android:gravity="center_vertical|center_horizontal" />	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/ll_button_chat"
	        android:background="@color/black_opaque"
	        android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center_vertical|center_horizontal">
	        <ImageView  android:id="@+id/button_chat"
		        android:layout_width="32dp"
		        android:layout_height="32dp"
		        android:src="@drawable/bottom_bar_icon_chat"	        
		        android:clickable="true"
		        android:layout_marginLeft="0dp"
		        android:onClick="onClickControlBar"
		        />
   		    <TextView 
		        android:id="@+id/title_button_chat"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:textSize="10sp"
		        android:text="Bible Answers"
		        android:textColor="#DDDDDD"
		        android:gravity="center_horizontal|center_vertical" />	        
		</LinearLayout>
		
	    <LinearLayout
        	android:id="@+id/ll_button_vbvm"
	        android:background="@color/black_opaque"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center_vertical|center_horizontal">
	        <ImageView  android:id="@+id/button_vbvm"
		        android:layout_width="32dp"
		        android:layout_height="32dp"
		        android:src="@drawable/bottom_bar_icon_vbvm"	        
		        android:clickable="true"
		        android:layout_marginLeft="0dp"
		        android:onClick="onClickControlBar"
		        />
   		    <TextView 
		        android:id="@+id/title_button_vbvm"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:textSize="10sp"
		        android:text="VBVM"
		        android:textColor="#DDDDDD"
		        android:gravity="center_vertical|center_horizontal" />	        
		</LinearLayout>	
			
	</LinearLayout>	
	
	<!-- Content -->
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffffff"
        android:layout_below="@id/top_control_bar"
   		android:layout_above="@id/bottom_control_bar" >
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_margin="10dp">
	    
	        <ImageView
			    android:id="@+id/img_author"
			    android:layout_width="60dp"
			    android:layout_height="60dp" />
		    	
			<TextView
			    android:id="@+id/tv_author_name"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"	    
			    android:textSize="18sp"
			    android:lines="1"
			    android:text="TextView"
			    android:textColor="#FF3200"
			    android:gravity="left"
			    android:layout_margin="10dp"/>			
	        	
	    </LinearLayout>
	    
	    <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_margin="0dp"> 
	        
<!-- 	        <ProgressBar -->
<!-- 	            android:id="@+id/progressBar" -->
<!-- 				android:indeterminateDrawable="@drawable/my_progress_indeterminate" -->
<!-- 				android:layout_height="50dp"  -->
<!-- 				android:layout_width="50dp" -->
<!-- 				android:layout_gravity="center"/> -->
	        
	        <ListView 
	            android:id="@+id/lv_articles"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
	            
	        </ListView>        
	        
	    </LinearLayout>
    
    </LinearLayout>
</RelativeLayout>
