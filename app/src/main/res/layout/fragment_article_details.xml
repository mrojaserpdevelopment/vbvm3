<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/tv_article_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="Title"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tv_article_details_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Author"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_below="@id/tv_article_details_title"/>
        <TextView
            android:id="@+id/tv_article_details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_article_details_title"
            android:layout_alignParentRight="true"
            android:text="date"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_article_details_author">
        <TextView
            android:id="@+id/tv_article_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_article_details_description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_below="@id/tv_article_details_description"/>
        <ImageView
            android:id="@+id/img_article_details_author"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/image_placeholder" />
    </RelativeLayout>



</LinearLayout>
</ScrollView>