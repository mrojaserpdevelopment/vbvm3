    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.erpdevelopment.vbvm.fragment.ArticlesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include layout="@layout/layout_search_listview" android:id="@+id/et_search_articles"/>

        <ListView
            android:id="@+id/lvArticles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/et_search_articles"/>

    </RelativeLayout>

</FrameLayout>
