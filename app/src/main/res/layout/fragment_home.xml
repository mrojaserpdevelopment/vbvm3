<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    
	<ScrollView
	    android:id="@+id/scrollview"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >
	    
        <LinearLayout 
	        android:id="@+id/layout_main"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"	        
	        android:layout_marginRight="10dp" >
	        
<!--             <View  -->
<!--                 android:layout_width="fill_parent" -->
<!--                 android:layout_height="10dp" -->
<!--                 android:background="@color/black" /> -->
	        
	        <LinearLayout 
		        android:id="@+id/ll_main_vbvm_top"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_marginBottom="0dp">
	        	
	            <LinearLayout 
	                android:id="@+id/ll_main_vbvm_left"
			        android:layout_width="0dp"
			        android:layout_weight="0.6"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginRight="10dp" >			        	                

	                <RelativeLayout 
	                    android:id="@+id/layout_last_study"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent" >

		                <ImageView 
			        	    android:id="@+id/img_last_study"
			        	    android:layout_height="150dp"
			        	    android:layout_width="150dp"
			        	    android:src="@drawable/recently_viewed"
			        	    android:layout_gravity="center_vertical|center_horizontal"
			        	    android:layout_centerInParent="true" />	                    	                    
	                    	                    
						<ProgressBar
							android:id="@+id/circular_progressbar_home"
							android:layout_width="150dp"
							android:layout_height="150dp"
							style="?android:attr/progressBarStyleHorizontal"
							android:indeterminate="false"
					        android:progress="25"
							android:max="100"
							android:secondaryProgress="100"
							android:progressDrawable="@drawable/circular"
							android:layout_centerInParent="true" />
			
						<TextView
			    	        android:id="@+id/tv_progress_percent_home"
				    	    android:layout_width="wrap_content"
				    	    android:layout_height="wrap_content"
				    	    android:text="" 
				    	    android:textColor="@android:color/holo_blue_bright"
				    	    android:textSize="34sp"
				    	    android:layout_centerInParent="true"
				    	    android:layout_marginTop="0dp" />
		                
	                </RelativeLayout>
	                
	                <TextView
	                    android:id="@+id/tv_last_study" 
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:textColor="@android:color/black"
	                    android:textSize="16sp"
	                    android:text="Last Study Listened To"
	                    android:layout_marginTop="5dp"
	                    android:layout_marginBottom="30dp"
	                    android:gravity="center_vertical|center_horizontal" />
	                
	                <TextView 
	                    android:id="@+id/tv_browse_library"
	                    android:layout_width="fill_parent"
	                    android:layout_height="50dp"
	                    android:background="@color/teal"
	                    android:textColor="@android:color/white"
	                    android:textSize="18sp"
	                    android:textStyle="bold"
	                    android:text="Browse library"
	                    android:gravity="center_vertical"
	                    android:paddingLeft="10dp"
	                    android:drawableLeft="@drawable/icon_reveal"
	                    android:drawablePadding="10dp"	                    	                    
	                    android:drawableStart="@drawable/icon_reveal"/>
	                
	            </LinearLayout>
	        	
	            <LinearLayout 
	                android:id="@+id/ll_main_vbvm_right"
			        android:layout_width="0dp"
			        android:layout_weight="0.4"
			        android:layout_height="wrap_content"
			        android:orientation="vertical">		
			        
	                <LinearLayout 
	                    android:id="@+id/ll_last_devo"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:orientation="vertical">
		                <ImageView 
			        	    android:id="@+id/img_last_devotional"
			        	    android:layout_height="100dp"
			        	    android:layout_width="100dp"
			        	    android:src="@drawable/image_placeholder"
			        	    android:layout_gravity="center_horizontal" />
		                
		                <TextView 
		                    android:id="@+id/tv_last_devotional"
		                    android:layout_width="fill_parent"
		                    android:layout_height="wrap_content"
		                    android:textColor="@android:color/black"
		                    android:textSize="16sp"
		                    android:text="Last Article Posted"
		                    android:maxLines="2"
		                    android:ellipsize="end"
		                    android:layout_marginBottom="15dp"
		                    android:gravity="center_horizontal" />
	                </LinearLayout>
	                <LinearLayout 
	                    android:id="@+id/ll_last_question"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:orientation="vertical"
	                    android:layout_gravity="center_horizontal"
	                    android:gravity="center_horizontal">
		                <ImageView 
			        	    android:id="@+id/img_last_question"
			        	    android:layout_height="100dp"
			        	    android:layout_width="100dp"
			        	    android:src="@drawable/icon_qa_posts"
			        	    android:layout_gravity="center_horizontal" />
		                
		                <TextView 
		                    android:id="@+id/tv_last_question"
		                    android:layout_width="fill_parent"
		                    android:layout_height="wrap_content"
		                    android:textColor="@android:color/black"
		                    android:textSize="16sp"
		                    android:text="Last QA Post"
		                    android:maxLines="2"
		                    android:ellipsize="end"
		                    android:layout_marginBottom="15dp"
		                    android:gravity="center_horizontal" />	        	                
					</LinearLayout>
					
	            </LinearLayout>	            
	            
	        </LinearLayout>
	        
	        <LinearLayout 
			     android:id="@+id/ll_main_favorites"
			     android:layout_width="fill_parent"
			     android:layout_height="100dp"
			     android:background="@android:color/white"
			     android:orientation="horizontal"
			     android:layout_marginBottom="10dp" >
			    
				<ImageView 
				    android:layout_width="0dp"
				    android:layout_weight="0.08"
				    android:layout_height="wrap_content"
				    android:src="@drawable/img_title_favorites_3"
				    android:paddingBottom="10dp"/>
		    	
		    	<!--<com.erpdevelopment.vbvm.TwoWayView-->
				    <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
				    <!--xmlns:tools="http://schemas.android.com/tools"-->
				    <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
				    <!--android:id="@+id/lvFavorites"-->
				    <!--style="@style/TwoWayView"-->
