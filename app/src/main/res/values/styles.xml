<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="CustomLightTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarCustomLightTheme</item>
<!--         <item name="android:homeAsUpIndicator">@drawable/ic_action_cancel</item> -->
    </style>

    <style name="ActionBarCustomLightTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#F80303</item>
    </style>
    
